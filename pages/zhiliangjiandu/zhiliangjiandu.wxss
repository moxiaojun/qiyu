/* pages/zhiliangjiandu/zhiliangjiandu.wxss */
page {
  background-color: #EEE; 
}

.head {
  background-color: #0094e0;
  height: 8.4rem;
}

.title {
  color: #FFF;
  text-align: center;
}

.font-46 {
  font-size: 46px;
}

.head-content {
  font-size: 13px;
  margin: 10rpx 20rpx;
  padding: 30rpx 16rpx;
  background-color: #FFF;
}

.content {
  font-size: 13px;
  margin: 20rpx;
  background-color: #FFF;
}

.list-box {
  padding: 0;
  margin: 122rpx 0 160rpx 0;
}

.heard-img {
  margin-right: 18rpx;
  background-color: #EEE;
}

.daka-time {
  font-size: 34px;
}

.capacity-daka {
  background-color: #FFF;
  padding: 3.6rem 0;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.round {
  width: 48rpx;
  height: 48rpx;
  color: #FFF;
  text-align: center;
  line-height: 48rpx;
  background-color: #07c160;
  border-radius: 50%;
  margin-right: 10rpx;
}

.cell-text {
  font-size: 16px;
  font-weight: 500;
}

.round-text {
  color: #007cdb;
}

.content .list-cell{
  margin:0;
  padding:16rpx 0;
}
.content .list-cell .heard-img{
  border-radius: .5rem;
  overflow: hidden;
}
.content .list-cell .list-right {
  display: flex;
}
.content .list-cell .list-right .list-right-text{
  color: rgb(7, 211, 0);
  line-height: 18px;
}
.content .list-cell .list-right .list-right-hufu{
  color: rgb(236, 126, 0);
  line-height: 18px;
}
.m-l {
  margin-left: 20rpx;
} 
.bottom { 
  display: block;
  width: 100%;  
  position: fixed;
  bottom: 10rpx; 
  padding: 20rpx; 
}
.btn-add{  
  width: 95%;
  color: #FFF;
  text-align: center;
  height: 72rpx;
  line-height: 72rpx;
  background-color: #0094e0;
  border-radius: 1.6rem;
}