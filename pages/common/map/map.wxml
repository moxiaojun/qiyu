  bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap"
  polyline="{{polyline}}" bindregionchange="regionchange" show-location
  style="width: 100%; height: {{view.Height}}px;"></map>
<view class="bottom">
  {{activeAddress}}
</view>